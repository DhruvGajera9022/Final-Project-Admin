<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Product_Activity">

    <LinearLayout
        android:id="@+id/actionbarforaddproduct"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_blue"
        android:orientation="horizontal"
        android:gravity="start|center">

        <ImageButton
            android:id="@+id/back_for_addproduct"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@color/dark_blue"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Product Details"
            android:textSize="25sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewforaddproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/actionbarforaddproduct">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:iconTint="@color/dark_blue"
                    android:src="@drawable/baseline_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Select Images : "
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_for_linearlayout">

                <ImageView
                    android:id="@+id/input_image_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:background="@drawable/shape_for_edittext"
                    android:src="@drawable/baseline_add_photo_alternate_24" />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/input_image_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_for_edittext"
                    android:src="@drawable/baseline_add_photo_alternate_24"
                    android:visibility="visible" />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/input_image_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_for_edittext"
                    android:src="@drawable/baseline_add_photo_alternate_24"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:iconTint="@color/dark_blue"
                    android:src="@drawable/baseline_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Name of Product : "
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edt_product_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_for_edittext"
                android:hint="Enter Name"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue_hint"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:iconTint="@color/dark_blue"
                    android:src="@drawable/baseline_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Price of Product : "
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edt_product_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_for_edittext"
                android:hint="Enter Price"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue_hint"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:iconTint="@color/dark_blue"
                            android:src="@drawable/baseline_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="Select Category : "
                            android:textColor="@color/dark_blue"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:iconTint="@color/dark_blue"
                            android:src="@drawable/baseline_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="Select Company : "
                            android:textColor="@color/dark_blue"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spinner_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:iconTint="@color/dark_blue"
                    android:src="@drawable/baseline_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Inventory of Product : "
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edt_product_quantity"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_for_edittext"
                android:hint="Enter Quantity"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue_hint"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:iconTint="@color/dark_blue"
                    android:src="@drawable/baseline_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Product Description : "
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edt_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_for_edittext"
                android:hint="Enter Desciption"
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingStart="10dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue_hint"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/scrollViewforaddproduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:background="@color/dark_blue"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/button_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clear"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="2.5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:background="@drawable/button_background_unfilled"/>

        <Button
            android:id="@+id/btn_insert"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="2.5dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="INSERT"
            android:textSize="18sp"
            android:background="@drawable/button_background_filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_unfilled"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:text="CANCEL"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>